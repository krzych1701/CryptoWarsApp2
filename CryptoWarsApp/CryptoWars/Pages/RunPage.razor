@page "/RunPage"
@inject NavigationManager NavigationManager

<div class="container">

    <div class="header">

            <h1>CryptoWars</h1>

    </div>

    <div class="contener">

        <div class="row h-80">
            <div class="col">
                <h1></h1>  
                <h2>WYKRES</h2>
            </div>
        </div>

        <div class="row h-20">
            <div class="col">
                <button class="btn btn-primary"
                    @onclick="@(e => NavigationManager.NavigateTo("/ScorePage"))">
