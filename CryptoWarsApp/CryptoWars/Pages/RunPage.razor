                </button>
            </div>
        </div>

    </div>

    <div class="footer">

        <div class="row">
                <div class="col">
                    <button class="btn btn-primary"
                    @onclick="@(e => NavigationManager.NavigateTo("/"))">
                        START
                    </button>
                </div>

                <div class="col">
                    <button class="btn btn-primary"
                    @onclick="@(e => NavigationManager.NavigateTo("/EndPage"))">
                        EXIT
                    </button>
                </div>
        </div>
    </div>
